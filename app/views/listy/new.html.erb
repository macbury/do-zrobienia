<% form_for(@lista) do |f| %>
	<fieldset>
		<% if @lista.new_record? %>
		<h1>Dodawanie nowej listy zadań:</h1>
		<% else %>
		<h1>Edycja listy zadań:</h1>
		<% end %>
		<p>
		  <%= f.label :nazwa, "Nazwa dla listy:" %> <%= error_for(@lista, :nazwa) -%>
			<br />
		  <%= f.text_field :nazwa, :style => "width: 792px" %>
		</p>

		<p>
		  <%= f.label :opis, "Krótki opis:" %> <%= error_for(@lista, :opis) -%>
		  <br />
		  <%= f.text_area :opis, :rows => 10, :style => "width: 792px" %>
		</p>

		<p>
			<%= f.label :tag_list, "Tagi:" %><small>(oddzielaj spacją np. praca dom szkoła)</small><br />
			<%= f.text_field :tag_list, :style => "width: 792px" %>
		</p>
	</fieldset>
	<div class="submenu">
		<%= f.submit "Zapisz" %>
		<% if @lista.new_record? %>
		 albo <%= link_to 'anuluj', listy_path %>
		<% else %>
		, <%= link_to 'anuluj', lista_zadania_path(@lista) %> albo <%= link_to "usuń", @lista, :confirm => "Czy na pewno chcesz usunąć tą liste?", :method => :delete %>
		<% end %>
	</div>
<% end %>
